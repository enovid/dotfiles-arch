"" Java
function! CompileRunGcc()
  exec "w"
  if &filetype ==# 'java'
    exec "!javac %"
    if !v:shell_error
      exec "!time java -cp %:p:h %:t:r"
    endif
  endif
endfunction

augroup java_run_mappings
    autocmd!
    autocmd FileType java nnoremap <Leader>d :call CompileRunGcc()<CR>
augroup END


